<div class="container">
    {{!-- This will contain the picture and the title --}}
    <div class="row titleRow">
        <div class="col-sm-12 text-center">
            <img src="/assets/img/burger2.png" width="250px" height="200px">
            <h1>Eat Da Burger!</h1>
        </div>
    </div>
    {{!-- This will contain the dynamically created burgers --}}
    <div class="row burgerRow">

        <div class="col-sm-6 text-center">
            <h3 style="font-weight: bold">Burgers To Eat</h3>
            <ul id="eatBurger">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        {{> burgers/up-del}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6 text-center">
            <h3 style="font-weight: bold">Devoured Burgers</h3>
            <ul id="devBurger">
                {{#each burgers}}
                    {{#if this.devoured}}
                        {{> burgers/up-del}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Add a Burger!</h2>
            <form class="create-form" action="/api/burgers" method="POST">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" class="form-control" id="burger" name="burger_name" placeholder="What kind of burger?">
                    <input type="hidden" name="devoured" value="0">
                </div>
                <button type="submit" class="btn btn-primary subBtn">Add Burger</button>
            </form>
            
        </div>
    </div>
</div>