<div class="container">
    {{!-- This will contain the picture and the title --}}
    <div class="row">
        <div class="col-sm-12 text-center">
            <img src="../public/assets/img/burger1.jpg">
            <h1>Eat Da Burger!</h1>
        </div>
    </div>
    {{!-- This will contain the dynamically created burgers --}}
    <div class="row">

        <div class="col-sm-6 text-center">
            <h3>Burgers To Eat</h3>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="btn btn-primary devour">Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6 text-center">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    <form action="api/burgers/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn brn-primary delete">Delete the Burger</button>
                    </form>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2>Add a Burger!</h2>
            <form class="create-form" action="/api/burgers" method="POST">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" class="form-control" id="burger" name="burger_name" placeholder="What kind of burger?">
                    <input type="hidden" name="devoured" value="0">
                </div>
                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
            
        </div>
    </div>
</div>